[
           {
                "Class":"TProviderDeviceHivePinThread_DHT22",
                "Alias":"DH11_Provider",
                "Parameter":{"Host":"http://dh11.local", "Pin":14}
            },
            {
                "Class":"TRelayDeviceHive_PinOut",
                "Alias":"DH11_Relay_A",
                "Descr":"Matochnik_RA_1",
                "Parameter":{"Host":"http://dh11.local", "Pin":12}
            },
            {
                "Class":"TRelayDeviceHive_PinOut",
                "Alias":"DH11_Relay_B",
                "Descr":"Matochnik_RB",
                "Parameter":{"Host":"http://dh11.local", "Pin":13}
            },
            {
                "Class":"TSensorProvider",
                "Alias":"DH11_Sensor_Temper",
                "Descr":"Matochnik_ST",
                "Parameter":{"ClassRef":"DH11_Provider", "Tag":"temperature", "WaitValue":30},
                "Triggers":[
                    {"Enable":false, "If":"self.Value > 23", "Always":"self.SetIf('$DH11_Relay_A')"},
                    {"Enable":false , "If":"self.Value > 19", "Then":"self.SetValue('$Telegram')"}
                ]
            },
            {
                "Class":"TSensorProvider",
                "Alias":"DH11_Sensor_Humid",
                "Descr":"Matochnik_SH",
                "Parameter":{"ClassRef":"DH11_Provider", "Tag":"humidity"},
                "Triggers":[
                    {"Enable":false,  "If":"self.InValue(60, 80)", "Always":"self.SetIf('$DH11_Relay_A')"},
                    {"Enable":false, "If":"self.Value < 50", "Always":"self.SetIf('$DH11_Relay_A')"},
                    {"Enable":false,  "If":"self.Value > 50", "Always":"self.SetIf('$DH11_Relay_B')"}
                ]
            },
            {
                "Class":"TSensorDeviceHiveMHZ19",
                "Alias":"DH11_Sensor_CO2",
                "Descr":"Matochnik_SCO2",
                "Parameter":{"Host":"http://dh11.local"},
                "Triggers":[
                    {"Enable":false,  "If":"self.InValue(60, 80)", "Always":"self.SetIf('$DH11_Relay_A')"},
                    {"Enable":false, "If":"self.Value < 50", "Always":"self.SetIf('$DH11_Relay_A')"},
                    {"Enable":false,  "If":"self.Value > 50", "Always":"self.SetIf('$DH11_Relay_B')"}
                ]
            }
]
