{
    "Class":[
       {
            "Class":"TProviderDeviceHivePinThread_DHT22",
            "Alias":"DH7_Provider",
            "Parameter":{"Host":"http://dh7.lan", "Pin":14}
        },
        {
            "Class":"TSensorProvider",
            "Alias":"DH7_Sensor_Temper",
            "Descr":"Matochnik_ST",
            "Parameter":{"ClassRef":"DH7_Provider", "Tag":"temperature", "Refresh":600},
            "Triggers":[
                {"Enable":false, "If":"self.Value < 18", "Always":"self.SetIf('$IRelay_3')"},
                {"Enable":false, "If":"self.Value < 15", "Then":"self.SetValue('$Telegram')"}
            ]
        },
        {
            "Class":"TSensorProvider",
            "Alias":"DH7_Sensor_Humid",
            "Descr":"Matochnik_SH",
            "Parameter":{"ClassRef":"DH7_Provider", "Tag":"humidity", "Refresh":600},
            "Triggers":[
                {"Enable":false, "If":"self.InValue(60, 80)", "Always":"self.SetIf('$DH2_Relay_A')"},
                {"Enable":false, "If":"self.Value < 50", "Always":"self.SetIf('$DH2_Relay_A')"},
                {"Enable":false, "If":"self.Value > 50", "Always":"self.SetIf('$DH2_Relay_B')"}
            ]
        }
    ]
}
