{
    "Class":[
       {
            "Class":"TProviderDeviceHivePinThread_DHT22",
            "Alias":"DH4_Provider",
            "Parameter":{"Host":"http://dh4.lan", "Pin":14}
        },
        {
            "Class":"TSensorProvider",
            "Alias":"DH4_Sensor_Temper",
            "Descr":"Holodilnik_ST",
            "Parameter":{"ClassRef":"DH4_Provider", "Tag":"temperature", "WaitValue":600},
            "Triggers":[
                {"Enable":true, "If":"self.Value < 0 or self.Value > 8", "Then":"self.SetValue('$Telegram')"}
            ]
        },
        {
            "Class":"TSensorProvider",
            "Alias":"DH4_Sensor_Humid",
            "Descr":"Holodilnik_SH",
            "Parameter":{"ClassRef":"DH4_Provider", "Tag":"humidity", "WaitValue":600}
        }
    ]
}
