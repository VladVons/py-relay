{
    "Gpio":{
        "Run":{
            "Init":[
            ],
            "Start":[
                {"Enable":false,   "ClassRef":"GroupOnStart"}
            ],
            "Loop":[
                {"Enable":true, "ClassRef":"Sleep_1"},

                {"Enable":false, "ClassRef":"Random_10_30"},

                {"Enable":true, "ClassRef":"SensorTRD_Light"},
                {"Enable":true, "ClassRef":"SensorTRC_Air"},

                {"Enable":true,  "ClassRef":"SensorUps"},

                {"Enable":false, "ClassRef":"SensorSun"},

                {"Enable":false, "ClassRef":"SensorUptimeSys"},
                {"Enable":false, "ClassRef":"SensorUptimeSys"},

                {"Enable":false,  "ClassRef":"DH2_Sensor_Humid"},
                {"Enable":false,  "ClassRef":"DH2_Sensor_Temper"},

                {"Enable":false,  "ClassRef":"DH4_Sensor_Humid"},
                {"Enable":false,  "ClassRef":"DH4_Sensor_Temper"}
            ],
            "Finish":[
                {"Enable":false,   "ClassRef":"GroupOnFinish"}
            ]
        },
       "Include":[
                {"Enable":true,  "File":"IncRandom.json"},
                {"Enable":true,  "File":"IncTimer.json"},
                {"Enable":true,  "File":"IncUps.json"},
                {"Enable":true,  "File":"IncRelay.json"},
                {"Enable":true,  "File":"IncReport.json"},
                {"Enable":true,  "File":"IncSolar.json"},
                {"Enable":false, "File":"IncUptime.json"},
                {"Enable":true,  "File":"IncDh2.json"},
                {"Enable":true,  "File":"IncDh4.json"}
        ],
        "Action":[
            {"OnLoop":  {"Enable":false, "ClassRef":"MainLoop"}},

            {"OnValue": {"Enable":true,  "ClassRef":"GroupOnValue"}},
            {"OnError": {"Enable":true,  "ClassRef":"WriteLogErr"}},
            {"OnRange": {"Enable":true,  "ClassRef":"WriteLogErr"}},
            {"OnAvg":   {"Enable":false, "ClassRef":"WriteLogErr"}}
        ],
        "Classes":[
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnValue",
                "Checks": [
                    {"Enable":true,  "Always":"self.SetValue('$WriteConsole')"},
                    {"Enable":false, "Always":"self.SetValue('$WriteLog')"},
                    {"Enable":true,  "Always":"self.SetValue('$Grafana')"}
                ]
            },
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnStart",
                "Checks": [
                    {"Enable":true,  "Always":"self.SetValue('$DH1_Relay_A', 0)"}
                ]
            },
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnFinish",
                "Checks": [
                    {"Enable":true,  "Always":"self.SetValue('$DH1_Relay_A', 0)"}
                ]
            },
            {
                "Class":"TControlSleep",
                "Alias":"Sleep_1",
                "Parameter":{"Time":1}
            }
        ]
    }
}
