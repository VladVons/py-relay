[
           {
                "Class":"TProviderDeviceHivePinThread_DHT22",
                "Alias":"DH2_Provider",
                "Parameter":{"Host":"http://192.168.2.143", "Pin":14}
            },
            {
                "Class":"TRelayDeviceHive_PinOut",
                "Alias":"DH2_Relay_A",
                "Descr":"Kitchen_RA_1",
                "Parameter":{"Host":"http://192.168.2.143", "Pin":12}
            },
            {
                "Class":"TRelayDeviceHive_PinOut",
                "Alias":"DH2_Relay_B",
                "Descr":"Kitchen_RB",
                "Parameter":{"Host":"http://192.168.2.143", "Pin":13}
            },
            {
                "Class":"TSensorProvider",
                "Alias":"DH2_Sensor_Temper",
                "Descr":"Kitchen_ST",
                "Parameter":{"ClassRef":"DH2_Provider", "Tag":"temperature", "WaitValue":30},
                "Triggers":[
                    {"Enable":false, "If":"self.Value > 23", "Always":"self.SetIf('$DH2_Relay_A')"},
                    {"Enable":false , "If":"self.Value > 19", "Then":"self.SetValue('$Telegram')"}
                ]
            },
            {
                "Class":"TSensorProvider",
                "Alias":"DH2_Sensor_Humid",
                "Descr":"Kitchen_SH",
                "Parameter":{"ClassRef":"DH2_Provider", "Tag":"humidity"},
                "Triggers":[
                    {"Enable":false,  "If":"self.InValue(60, 80)", "Always":"self.SetIf('$DH2_Relay_A')"},
                    {"Enable":false, "If":"self.Value < 50", "Always":"self.SetIf('$DH2_Relay_A')"},
                    {"Enable":false,  "If":"self.Value > 50", "Always":"self.SetIf('$DH2_Relay_B')"}
                ]
            }
]
