{
    "Gpio":{
        "Run":{
            "Init":[
            ],
            "Start":[
                {"Enable":true,   "ClassRef":"GroupOnStart"}
            ],
            "Loop":[
                {"Enable":true, "ClassRef":"Sleep_1"},
                {"Enable":true, "ClassRef":"Random_10_30"},
                {"Enable":true, "ClassRef":"SensorSun"},
                {"Enable":true, "ClassRef":"SensorUptimeSys"}
            ],
            "Finish":[
                {"Enable":true,   "ClassRef":"GroupOnFinish"}
            ]
        },
       "Include":[
                {"Enable":true, "File":"IncReport.json"},
                {"Enable":true, "File":"IncSolar.json"},
                {"Enable":true, "File":"IncUptime.json"}
        ],
        "Action":[
            {"OnLoop":  {"Enable":false, "ClassRef":"MainLoop"}},

            {"OnValue": {"Enable":true,  "ClassRef":"GroupOnValue"}},
            {"OnError": {"Enable":true,  "ClassRef":"WriteLogErr"}},
            {"OnRange": {"Enable":true,  "ClassRef":"WriteLogErr"}},
            {"OnAvg":   {"Enable":false, "ClassRef":"WriteLogErr"}}
        ],
        "Classes":[
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnValue",
                "Checks": [
                    {"Enable":true,  "Always":"self.SetValue('$WriteConsole')"},
                    {"Enable":false,  "Always":"self.SetValue('$Grafana')"}
                ]
            },
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnStart",
                "Checks": [
                    {"Enable":false,  "Always":"self.SetValue('$DH1_Relay_A', 0)"}
                ]
            },
            {
                "Class":"TDeviceGroup",
                "Alias":"GroupOnFinish",
                "Checks": [
                    {"Enable":false,  "Always":"self.SetValue('$DH1_Relay_A', 0)"}
                ]
            },
            {
                "Class":"TControlSleep",
                "Alias":"Sleep_1",
                "Parameter":{"Time":1}
            },
            {
                "Class":"TSensorRandom",
                "Alias":"Random_10_30", 
                "Descr":"Random generator", 
                "Parameter":{"Begin":10, "End":30},
                "Triggers":[
                    {"Enable":false, "Always":"self.File('DH2.py')"},
                    {"Enable":true, "If":"self.Value > 20", "Then":"self.Break('Test')"},
                    {"Enable":true, "Always":"self.SetValue('$WriteConsoleRand', 1000)"},
                    {"Enable":true, "Label":"Test", "If":"self.Value > 15", "Then":"if self.CountIf > 10: self.SetIf('$WriteLog')"}
                ]
            }
        ]
    }
}
